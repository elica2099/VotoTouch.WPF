<Window x:Class="VotoTouch.WPF.Views.Tools.FWSMessage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VotoTouch.WPF.Views.Tools"
        mc:Ignorable="d"
        Title="FWSMessage" Height="200" Width="940">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="140" />
            <ColumnDefinition Width="0.80*" />
            <ColumnDefinition Width="300" />
        </Grid.ColumnDefinitions>

        <TextBlock Grid.Column="1" x:Name="lblMessage" VerticalAlignment="Center" HorizontalAlignment="Center" 
                   TextWrapping="Wrap" TextAlignment="Center" />

        <Button Grid.Column="2" Name="btnChiudi" Height="200" Width="270" 
                HorizontalAlignment="Center" VerticalAlignment="Center" Content="Chiudi"
                FontSize="20" FontWeight="DemiBold" Click="ButtonChiudi_OnClick" />


</Grid>
</Window>
