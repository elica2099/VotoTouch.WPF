<UserControl x:Class="VotoTouch.WPF.Views.UserControls.ULabelCandidati"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:VotoTouch.WPF.Views.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.33*" x:Name="column1" />
            <ColumnDefinition Width="0.33*" x:Name="column2" />
            <ColumnDefinition Width="0.33*" x:Name="column3" />
        </Grid.ColumnDefinitions>
        <TextBlock x:Name="label1" Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Center"
                   TextWrapping="Wrap" TextAlignment="Center" Visibility="Collapsed" />
        <TextBlock x:Name="label2" Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Center"
                   TextWrapping="Wrap" TextAlignment="Center" Visibility="Collapsed" />
        <TextBlock x:Name="label3" Grid.Column="2" VerticalAlignment="Center" HorizontalAlignment="Center"
                   TextWrapping="Wrap" TextAlignment="Center" Visibility="Collapsed" />

    </Grid>
</UserControl>
